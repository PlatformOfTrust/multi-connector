{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "single"],
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "no-var": 2,
        "prefer-const": 1,
        "comma-dangle": [2, "always-multiline"],
        "object-curly-spacing": [2, "never"],
        "array-bracket-spacing": [2, "never"],
        "space-in-parens": [2, "never"],
        "space-before-function-paren": [2, "always"],
        "space-before-blocks": [2, "always"],
        "arrow-spacing": 2,
        "keyword-spacing": [2, {
            "before": true,
            "after": true
        }]
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    }
}
